<Window x:Class="CSH_Monitor.UI.Features.EntryWindow.EntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:edge="clr-namespace:CSH_Monitor.UI"
        xmlns:behaviors="clr-namespace:CSH_Monitor.UI.Behaviors"
        xmlns:local="clr-namespace:CSH_Monitor.UI.Features.EntryWindow"
        mc:Ignorable="d"
        MinHeight="500" MinWidth="600"
        WindowStartupLocation="CenterScreen"
        Title="CSH Monitor V0.0.0-unstable" Height="720" Width="1280">
    <i:Interaction.Behaviors>
        <behaviors:WindowSizeBehavior Width="{Binding WindowWidth, Mode=OneWayToSource}" Height="{Binding WindowHeight, Mode=OneWayToSource}"/>
    </i:Interaction.Behaviors>
    <Window.Resources>
        <DataTemplate x:Key="MainPlotTemplate">
            <TextBlock Text="{Binding CurrentDisplayText}"/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" VerticalAlignment="Top">
            <MenuItem Header="File">

            </MenuItem>
            <MenuItem Header="Edit" >

            </MenuItem>
            <MenuItem Header="View" >

            </MenuItem>
        </Menu>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Здесь будут различные команды" Margin="5,0"/>
        </StackPanel>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="Gray" Margin="0,20,0,0">
                <TextBlock Text="возможно здесь будет что либо по проектам" TextWrapping="Wrap"/>
            </Border>
            
            <Border Grid.Column="1">
                <TabControl SelectedIndex="{Binding SelectedTabIndex, Mode=TwoWay}">
                    <TabItem Header="Вкладка 1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <ContentPresenter Grid.Row="0" Grid.Column="0"
                                            Content="{Binding}"
                                            ContentTemplate="{StaticResource MainPlotTemplate}"/>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Вкладка 2">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <ContentPresenter Grid.Row="0" Grid.Column="0"
                                            Content="{Binding}"
                                            ContentTemplate="{StaticResource MainPlotTemplate}"/>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Вкладка 3">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <ContentPresenter Grid.Row="0" Grid.Column="0"
                                            Content="{Binding}"
                                            ContentTemplate="{StaticResource MainPlotTemplate}"/>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Border>
            <Border Grid.Column="2" Background="LightGray" Margin="0,20,0,0">
                <TextBlock Text="здесь будет поле ввода данных" TextWrapping="Wrap"/>
            </Border>
        </Grid>

        <StatusBar Grid.Row="3">
            <StatusBarItem>
                <WrapPanel>
                    <TextBlock Text="Строка состояния (нужно подумать что ещё сюда добавить)" Margin="5,0"/>
                    <TextBlock Text="{Binding WindowWidth}" Margin="5,0"/>
                    <TextBlock Text="{Binding WindowHeight}" Margin="5,0"/>
                </WrapPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>